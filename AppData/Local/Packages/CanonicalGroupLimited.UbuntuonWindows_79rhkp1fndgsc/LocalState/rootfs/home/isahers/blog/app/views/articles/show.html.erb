
<div class="article">
<h1 id="showhead">Article</h1>


<p>
  <strong class="headers">Title:</strong>
    <%= @article.title %>
</p>
 
<p>
  <strong class="headers">Text:</strong>
    <%= @article.text %>
</p>
</div>

<div class="main">
	<div class="mains">
<h2 class="titles">Comments</h2>
<%= render @article.comments %>
	</div>
	<div class="mains">
<h2 class="titles">Add a Comment</h2>
<%= render 'comments/form' %>
	</div>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
